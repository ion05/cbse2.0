<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
</head>
<link rel="stylesheet" href="/css/dashboard.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">

<body>
    <%- include('./partials/nav.ejs') -%>
    <% if (user.isTeacher == true) { %>
    <h3>Create a class</h3>
    <h3><%= user.username %> </h3>
    <form action="/class/create" method="POST">
        <input type="text" name="name" id="name" placeholder="Class Name">
        <input type="text" name="description" id="description" , placeholder="Class Description">
        <button>Create Class</button>
    </form>
    <% } else { %>
    <!-- <h3> Join a Class</h3>
    <form action="/class/join" method="POST">
        <input type="text" name="code" id="code" placeholder="Class Code">
        <button>Join Class</button>
    </form>
    <br>
    <h3>Existing Classes</h3> -->
    <div class="main-div">
        <h1>Home</h1>

        <div class="meet-sq">
            <div class="meet-icon">
                <span class="material-icons-outlined">
                    videocam
                </span>
            </div>
            <h3>Quick Join</h3>
            <p>Via invitation link</p>
        </div>
        <div class="meet-log active" style="margin-top: 27.5vw; border:5px solid #2d5aad;">
            <div class="teacher-pfp">
            </div>
            <h3>Maths Class</h3>
            <p>Started 6 mins ago | Mike Bleach</p>
            <button class="id btn">ID</button><button class="join btn ">JOIN</button>
        </div>
        <div class="meet-log">
            <div class="teacher-pfp" style="border:none;"></div>
            <h3>English Test</h3>
            <p>
                <p>Starts in 1hr 30 mins  | Jake Kin</p>
            </p>
            <button class="id btn">ID</button><button class="join btn ">JOIN</button>
        </div>
    </div>
    <div class="line-2"></div>
        <div class="other-div">
            <div class="time-component">

            </div>
            <div class="note-component">
                <div class="note-icon">
                    <span class="material-icons-outlined">
                        history_edu
                    </span>
                    <h5>Notes</h5>
                </div>
            </div>
            <div class="faq-component">
                <div class="faq-icon">
                    <span class="material-icons-outlined">
                        question_answer
                    </span>
                    <h5>Q&A</h5>
                </div>
            </div>
            <div class="assignment-div">
                <h4>Assignment Pending</h4>
                <div class="activity-circle">
                </div>
                <p>Social Science Holiday Homework</p>
                <h5>Due Date: Tomorrow</h5>
            </div>
        </div>
        <div class="attendance-div">
            <h4>Attendance</h4>
        </div>
        <div class="course-div">
            <h4>Course Completed</h4>
        </div>
    <% } %>
</body>
<script src="./js/time.js"></script>
</html>